{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "~/aspida/*": ["./packages/aspida/*"],
      "~/axios-mock-server/*": ["./packages/axios-mock-server/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["dist", "examples"]
}
